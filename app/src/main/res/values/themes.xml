<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculaticeScientifique" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!-- new style DE Button equivalent de border reduis en css-->
    <style name="ButtonStyle">
        <item name="cornerSizeTopRight">40%</item>
        <item name="cornerSizeTopLeft">40%</item>
        <item name="cornerSizeBottomLeft">60%</item>
        <item name="cornerSizeBottomRight">60%</item>
    </style>

</resources>